{
  "name": "cfg-manager",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "homepage": "./",
  "author": {
    "name": "Rufio",
    "email": "rufio-tf2@gmail.com",
    "url": "https://github.com/rufio-tf2"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@xstate/react": "^0.8.1",
    "clsx": "^1.1.0",
    "electron-is-dev": "^1.1.0",
    "electron-settings": "^3.2.0",
    "fs-extra": "^8.1.0",
    "lodash.merge": "^4.6.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0",
    "styled-components": "^5.0.1",
    "xstate": "^4.7.8"
  },
  "devDependencies": {
    "@rescripts/cli": "0.0.13",
    "@rescripts/rescript-env": "0.0.11",
    "concurrently": "^5.1.0",
    "electron": "^9.4.0",
    "electron-builder": "^22.3.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-react-app": "^5.2.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-import-order-alphabetical": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.4.0",
    "prettier": "^1.19.1",
    "wait-on": "^4.0.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "build": {
    "appId": "com.my-website.my-app",
    "productName": "CFG Manager",
    "copyright": "Copyright Â© 2020 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "build": "rescripts build",
    "wdev": "npm run electron-dev-windows",
    "mdev": "npm run electron-dev-mac",
    "electron-dev-mac": "concurrently \"BROWSER=none npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-dev-windows": "concurrently \"SET BROWSER=none&&npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "build -w",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "npm run build",
    "start": "rescripts start",
    "test": "rescripts test"
  }
}
